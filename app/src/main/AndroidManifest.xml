<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jone.helper" >
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".App"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.main.MenuActivity"
            android:theme="@style/Theme.clientActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--<activity-->
            <!--android:name=".ui.actionBarTabs.ActionBarTabsActivity"-->
            <!--android:label="@string/app_name"-->
            <!--android:theme="@style/Theme.clientActivity">-->
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        <!--</activity>-->

        <activity
            android:name=".flashlight.FlashlightActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>

        <activity android:name=".app.Calculator.Calculator"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>

        <activity android:name=".ui.NewsDetailActivity"
            android:theme="@android:style/Theme.Holo.Light"
            android:parentActivityName=".ui.main.MenuActivity"
            android:launchMode="singleInstance"/>

        <receiver
            android:name=".ui.weatherWidget.ui.WeatherWidget"
            android:label="JoneWeather" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="jone.intent.action.update.weather" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_weather" />
        </receiver>

        <service android:name=".ui.weatherWidget.service.AppWidgetService" />

        <provider
            android:authorities="jone.helper.lib.ProcessDataContentProvider"
            android:name=".lib.contentProvider.ProcessDataContentProvider"
            android:enabled="true"
            android:exported="true"/>

        <meta-data android:value="5421322856240bf7910000e4" android:name="UMENG_APPKEY"/>
        <meta-data android:value="${UMENG_CHANNEL_VALUE}" android:name="UMENG_CHANNEL"/>
    </application>
</manifest>