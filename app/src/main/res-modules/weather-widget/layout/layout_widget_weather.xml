<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="120dp"
    android:background="@drawable/bg_weather"
    android:padding="4dp">
    <ImageView
        android:id="@+id/im_weather_icon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/weather_sunny"/>
    <RelativeLayout
        android:id="@+id/layout_weather_txt_info"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="2dp">
        <TextView
            android:id="@+id/tx_weather_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="晴"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/tx_weather_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苏州"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/tx_weather_weather"/>
        <TextView
            android:id="@+id/tx_weather_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="10°C-21°C"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_weather_time"
        android:layout_height="match_parent"
        android:layout_width="165dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tx_weather_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:shadowColor="#000000"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/txt_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="周一 12月30"/>
        <TextView
            android:id="@+id/txt_calendar_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="庚寅年(虎)腊月十七子时"/>
    </LinearLayout>
</RelativeLayout>