<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="dateInfo" type="jone.helper.bean.DateInfo"/>
    </data>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardMaxElevation="@dimen/card_max_elevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{dateInfo.dataStr}"
                android:lineSpacingExtra="2dp"
                android:textSize="16sp"
                android:padding="4dp"
                style="@style/style_content_text_color"/>

            <Button
                android:id="@+id/btn_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                style="@style/style_content_text_color"
                android:drawableLeft="@mipmap/icon_search_location"
                android:padding="8dp"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/view_top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20000000"
                android:layout_margin="2dp"
                android:layout_below="@+id/txt_calendar"/>
            <TableLayout
                android:id="@+id/tab_layout_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_top_line">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_0"
                        style="@style/style_content_text_color"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_1"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_2"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_3"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_4"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_5"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/week_6"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_calendar_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[0]}"
                        android:background="@{dateInfo.todayIndex == 0 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txt_calendar_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[1]}"
                        android:background="@{dateInfo.todayIndex == 1 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txt_calendar_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[2]}"
                        android:background="@{dateInfo.todayIndex == 2 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_calendar_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[3]}"
                        android:background="@{dateInfo.todayIndex == 3 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_calendar_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[4]}"
                        android:background="@{dateInfo.todayIndex == 4 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_calendar_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[5]}"
                        android:background="@{dateInfo.todayIndex == 5 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_calendar_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{dateInfo.calendars[6]}"
                        android:background="@{dateInfo.todayIndex == 6 ? @drawable/today_bg : null}"
                        android:textSize="18sp"
                        android:lineSpacingExtra="2dp"
                        style="@style/style_content_text_color"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>

