<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="500" android:exitFadeDuration="500">
    <!-- 当前窗口失去焦点时 -->
    <item android:state_window_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="2dp"
                android:color="@android:color/darker_gray" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 不可用时 -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 按压时 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#552F90BD" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 被选中时 -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#CCE4007F" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 被激活时 -->
    <item android:state_activated="true">
        <shape>
            <solid android:color="#E4007F" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 默认时 -->
    <item>
        <shape>
            <solid android:color="@color/light_blue_400" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>