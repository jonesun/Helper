<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.jone" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/window_background</item>-->
    </style>
    <style name="Theme.jone.blue" parent="Theme.jone">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/jone_style_blue_A700</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/jone_style_blue_A400</item>
        <!--<item name="colorAccent">@color/jone_style_blue_A400</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.jone.blue.main" parent="Theme.jone.blue">
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="MyThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">

        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/jone_style_blue_500</item>
        <item name="colorPrimaryDark">@color/jone_style_blue_600</item>
        <item name="colorAccent">@color/jone_style_blue_500</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/main_white</item>

    </style>
</resources>