<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jone_style_blue_A400</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.clientActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="edit_note_menu">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="edit_note_menu_item" parent="edit_note_menu">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="style_content_text_color">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="HelperBaseTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/jone_style_blue_A400</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HelperBaseTheme.Main" parent="HelperBaseTheme">
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
